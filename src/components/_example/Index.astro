---
import TodoList from './TodoList.astro';
import Weekend from './Weekend.astro';
---

<div id="container">
  <TodoList/>
  <Weekend/>
</div>

<style>
  #container {
	font-family: Arial, Helvetica, sans-serif;
    padding: 0.5rem;
    display: grid;
    grid-template-areas:
      "todoList week"
      "todoList week";
    grid-gap: 1rem;
  }

  .calendar {
    grid-area: cal;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem;
    border: 1px solid #aaa;
    border-radius: 0.5rem;
  }

  .todoList {
    grid-area: todoList;
    padding: 0.5rem;
    border: 1px solid #aaa;
    border-radius: 0.5rem;
  }
</style>
