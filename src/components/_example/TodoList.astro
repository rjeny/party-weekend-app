---
import Tag from "./Tag.astro"
---

<div class="todoList">
  <h3>Список дел</h3>
  <div class="tags-list"></div>
  <div class="list">
    <div class="event">
        <div class="title">
            Бранч
            <Tag tag="tag1"/>
            <Tag tag="tag2"/>
        </div>
        <div class="time">11:00-12:00</div>
    </div>
  </div>
</div>

<style>
  .todoList {
    grid-area: todoList;
    padding: 0.5rem;
    border: 1px solid #aaa;
    border-radius: 0.5rem;
  }

  .list {
    padding: 1rem;
  }

  .title {
    font-weight: bold;
    font-size: 1.2rem;
  }

  .time {
    margin-top: 6px;
    padding: 5px 10px;
    border-radius: 8px;
    background: #ddd;
    width: max-content;
  }

  .event {
    background: #f5f5f5;
    border-radius: 12px;
    padding: 1rem;
  }
</style>
